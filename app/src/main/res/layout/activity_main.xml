<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/black"
        android:gravity="center_horizontal"
        android:padding="20dp">

        <!-- Encabezado -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“‹ Base de Datos de Clientes"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="28sp"
            android:background="@color/gris"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="25dp"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="4" />

        <!-- Tarjeta de datos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/grisis"
            android:padding="18dp"
            android:elevation="5dp"
            android:layout_marginBottom="25dp">

            <EditText
                android:id="@+id/txtRFC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="RFC / NIF"
                android:padding="14dp"
                android:background="@drawable/edittext_borde"
                android:inputType="text"
                android:textColorHint="#607D8B"
                android:drawableStart="@android:drawable/ic_menu_info_details"
                android:drawablePadding="10dp" />

            <EditText
                android:id="@+id/txtNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre completo"
                android:padding="14dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_borde"
                android:inputType="textPersonName"
                android:textColorHint="#607D8B"
                android:drawableStart="@android:drawable/ic_menu_edit"
                android:drawablePadding="10dp" />

            <EditText
                android:id="@+id/txtCorreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Correo electrÃ³nico"
                android:padding="14dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_borde"
                android:inputType="textEmailAddress"
                android:textColorHint="#607D8B"
                android:drawableStart="@android:drawable/ic_dialog_email"
                android:drawablePadding="10dp" />

            <EditText
                android:id="@+id/txtTelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="NÃºmero de telÃ©fono"
                android:padding="14dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_borde"
                android:inputType="phone"
                android:textColorHint="#607D8B"
                android:drawableStart="@android:drawable/ic_menu_call"
                android:drawablePadding="10dp" />

            <EditText
                android:id="@+id/txtDireccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="DirecciÃ³n"
                android:padding="14dp"
                android:layout_marginTop="10dp"
                android:inputType="textPostalAddress"
                android:textColorHint="#607D8B"
                android:background="@drawable/edittext_borde"
                android:drawableStart="@android:drawable/ic_menu_mylocation"
                android:drawablePadding="10dp" />

            <EditText
                android:id="@+id/txtCiudad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ciudad"
                android:padding="14dp"
                android:layout_marginTop="10dp"
                android:inputType="text"
                android:textColorHint="#607D8B"
                android:background="@drawable/edittext_borde"
                android:drawableStart="@android:drawable/ic_menu_compass"
                android:drawablePadding="10dp" />
        </LinearLayout>

        <!-- Botones CRUD con efecto -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="25dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Agregar"
                android:onClick="agregar"
                android:textColor="#FFFFFF"
                android:background="@drawable/boton_verde"
                android:layout_margin="5dp"
                android:elevation="4dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Buscar"
                android:onClick="buscar"
                android:textColor="#FFFFFF"
                android:background="@drawable/boton_azul"
                android:layout_margin="5dp"
                android:elevation="4dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Actualizar"
                android:onClick="actualizar"
                android:textColor="#FFFFFF"
                android:background="@drawable/boton_naranja"
                android:layout_margin="5dp"
                android:elevation="4dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Eliminar"
                android:onClick="eliminar"
                android:textColor="#FFFFFF"
                android:background="@drawable/boton_rojo"
                android:layout_margin="5dp"
                android:elevation="4dp" />
        </LinearLayout>

        <!-- Resultados -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/tarjeta_blanca"
            android:padding="15dp"
            android:elevation="3dp">

            <TextView android:id="@+id/tvRFC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>
            <TextView android:id="@+id/tvNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>
            <TextView android:id="@+id/tvCorreo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>
            <TextView android:id="@+id/tvTelefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>
            <TextView android:id="@+id/tvDireccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>
            <TextView android:id="@+id/tvCiudad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
